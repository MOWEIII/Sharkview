<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AutoRenderer.ViewModels"
             xmlns:models="using:AutoRenderer.Core.Models"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="AutoRenderer.Views.SceneEditorView"
             x:DataType="vm:SceneEditorViewModel"
             DragDrop.AllowDrop="True">

    <UserControl.Resources>
        <x:Double x:Key="ZeroDouble">0</x:Double>
    </UserControl.Resources>

    <Grid ColumnDefinitions="280, *, 320" Margin="0,0,0,0">
        <!-- Left: Scene Graph -->
        <Border Grid.Column="0" Classes="Card" Margin="0,0,10,0" Padding="15">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15" Spacing="10">
                    <TextBlock Text="SCENE GRAPH" FontWeight="Bold" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto">
                         <Button Grid.Row="0" Grid.Column="0" Content="Import" Command="{Binding ImportModelCommand}" Margin="0,0,5,5" HorizontalAlignment="Stretch"/>
                         <Button Grid.Row="0" Grid.Column="1" Content="Add Light" Command="{Binding AddLightCommand}" Margin="5,0,0,5" HorizontalAlignment="Stretch"/>
                         <Button Grid.Row="1" Grid.ColumnSpan="2" Content="World Settings" Command="{Binding EditWorldSettingsCommand}" HorizontalAlignment="Stretch"/>
                    </Grid>
                </StackPanel>
                
                <ListBox ItemsSource="{Binding SceneObjects}" 
                         SelectedItem="{Binding SelectedObject}" 
                         Background="Transparent" 
                         BorderThickness="0"
                         KeyDown="OnListBoxKeyDown">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}" 
                                          Background="Transparent" 
                                          DragDrop.AllowDrop="True" 
                                          DragDrop.Drop="OnItemDrop"
                                          DragDrop.DragEnter="OnItemDragEnter"
                                          DragDrop.DragLeave="OnItemDragLeave">
                                <ContentControl.DataTemplates>
                                    <DataTemplate DataType="models:LightObject">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="ðŸ’¡" VerticalAlignment="Center" FontSize="14"/>
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="Medium"/>
                                        </StackPanel>
                                    </DataTemplate>
                                    <DataTemplate DataType="models:SceneObject">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="ðŸ“¦" VerticalAlignment="Center" FontSize="14"/>
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="Medium"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ContentControl.DataTemplates>
                            </ContentControl>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Center: Viewport -->
        <Border Grid.Column="1" Classes="Card" ClipToBounds="True" Padding="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <Grid>
                <Border Background="#101010">
                     <!-- Preview Image -->
                    <Image Source="{Binding PreviewImage}" 
                           Stretch="Uniform" 
                           IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                </Border>
               
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15" 
                            IsVisible="{Binding IsLoadingPreview}">
                    <ProgressBar IsIndeterminate="True" Width="200"/>
                    <TextBlock Text="Rendering Preview..." Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding PreviewStatusMessage}" 
                           Foreground="#FF453A" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Bottom" 
                           Margin="0,0,0,80"
                           IsVisible="{Binding PreviewStatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                <!-- Placeholder -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10"
                            IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNull}}">
                    <TextBlock Text="No Preview Available" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Drag &amp; Drop 3D files here" Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.7" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Controls Overlay -->
                <Grid RowDefinitions="Auto, *" Margin="15">
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                         <CheckBox IsChecked="{Binding AutoRefreshPreview}" Content="Auto-Refresh" Foreground="{DynamicResource TextPrimaryBrush}"/>
                         <Button Command="{Binding RefreshPreviewCommand}" ToolTip.Tip="Refresh 3D Preview" Padding="8">
                            <TextBlock Text="ðŸ”„"/>
                        </Button>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Spacing="15">
                        <Button Command="{Binding SavePreviewAsImageCommand}" 
                                IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNotNull}}">
                             <StackPanel Orientation="Horizontal" Spacing="8">
                                 <TextBlock Text="ðŸ’¾"/>
                                 <TextBlock Text="Save Image"/>
                             </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding QuickRenderCommand}" Classes="Primary">
                             <StackPanel Orientation="Horizontal" Spacing="8">
                                 <TextBlock Text="ðŸŽ¬"/>
                                 <TextBlock Text="Quick Render"/>
                             </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Right: Properties -->
        <Border Grid.Column="2" Classes="Card" Margin="10,0,0,0" Padding="20">
            <ScrollViewer>
                <StackPanel Spacing="20">
                    <TextBlock Text="PROPERTIES" FontWeight="Bold" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    
                    <!-- Selected Object Settings -->
                    <StackPanel IsVisible="{Binding SelectedObject, Converter={x:Static ObjectConverters.IsNotNull}}" Spacing="20">
                        
                        <!-- Header -->
                        <Grid ColumnDefinitions="80, *">
                            <TextBlock Text="Name" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBox Text="{Binding SelectedObject.Name}" Grid.Column="1"/>
                        </Grid>
                        
                        <Separator Background="{DynamicResource BorderBrush}" Height="1"/>

                        <!-- Transform Section -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="Transform" FontWeight="SemiBold"/>
                            
                            <!-- Position -->
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,10,*,10,*">
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="5" Text="Position" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedObject.Position.X}" Grid.Row="1" Grid.Column="0" Watermark="X" Classes="Compact"/>
                                <TextBox Text="{Binding SelectedObject.Position.Y}" Grid.Row="1" Grid.Column="2" Watermark="Y" Classes="Compact"/>
                                <TextBox Text="{Binding SelectedObject.Position.Z}" Grid.Row="1" Grid.Column="4" Watermark="Z" Classes="Compact"/>
                            </Grid>
                            
                            <!-- Rotation -->
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,10,*,10,*">
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="5" Text="Rotation" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedObject.Rotation.X}" Grid.Row="1" Grid.Column="0" Watermark="X" Classes="Compact"/>
                                <TextBox Text="{Binding SelectedObject.Rotation.Y}" Grid.Row="1" Grid.Column="2" Watermark="Y" Classes="Compact"/>
                                <TextBox Text="{Binding SelectedObject.Rotation.Z}" Grid.Row="1" Grid.Column="4" Watermark="Z" Classes="Compact"/>
                            </Grid>

                            <!-- Scale -->
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,10,*,10,*">
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="5" Text="Scale" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedObject.Scale.X}" Grid.Row="1" Grid.Column="0" Watermark="X" Classes="Compact"/>
                                <TextBox Text="{Binding SelectedObject.Scale.Y}" Grid.Row="1" Grid.Column="2" Watermark="Y" Classes="Compact"/>
                                <TextBox Text="{Binding SelectedObject.Scale.Z}" Grid.Row="1" Grid.Column="4" Watermark="Z" Classes="Compact"/>
                            </Grid>
                        </StackPanel>

                        <Separator Background="{DynamicResource BorderBrush}" Height="1" IsVisible="{Binding SelectedObject, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                        <!-- Light Properties Section -->
                        <ContentControl Content="{Binding SelectedObject}">
                            <ContentControl.DataTemplates>
                                <DataTemplate DataType="models:LightObject">
                                    <StackPanel Spacing="15">
                                        <TextBlock Text="Light Settings" FontWeight="SemiBold"/>
                                        
                                        <Grid ColumnDefinitions="80, *">
                                            <TextBlock Text="Type" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <ComboBox SelectedItem="{Binding LightType}" HorizontalAlignment="Stretch" Grid.Column="1">
                                                <models:LightType>POINT</models:LightType>
                                                <models:LightType>SUN</models:LightType>
                                                <models:LightType>SPOT</models:LightType>
                                                <models:LightType>AREA</models:LightType>
                                            </ComboBox>
                                        </Grid>
                                        
                                        <Grid ColumnDefinitions="80, *">
                                            <TextBlock Text="Energy" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <TextBox Text="{Binding Energy}" Grid.Column="1"/>
                                        </Grid>

                                        <Grid ColumnDefinitions="80, *">
                                            <TextBlock Text="Color" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <TextBox Text="{Binding Color}" Grid.Column="1"/>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ContentControl.DataTemplates>
                        </ContentControl>

                        <!-- Modifiers -->
                        <StackPanel Spacing="10">
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBlock Text="Modifiers" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="+ Auto-Rotate" Command="{Binding AddAutoRotateModifierCommand}" FontSize="12" Padding="8,4"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding SelectedObject.Modifiers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="models:Modifier">
                                        <Border Background="{DynamicResource SurfaceLightBrush}" Padding="10" Margin="0,0,0,10" CornerRadius="4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                            <Grid RowDefinitions="Auto, Auto">
                                                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    <Button Content="âœ•" 
                                                            Command="{Binding $parent[UserControl].DataContext.RemoveModifierCommand}"
                                                            CommandParameter="{Binding}"
                                                            FontSize="10"
                                                            Padding="6,2"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            DockPanel.Dock="Right"/>
                                                </DockPanel>

                                                <ContentControl Grid.Row="1" Content="{Binding}">
                                                    <ContentControl.DataTemplates>
                                                        <DataTemplate DataType="models:AutoRotateModifier">
                                                            <Grid ColumnDefinitions="Auto, *">
                                                                <ComboBox SelectedIndex="0" Grid.Column="0" Margin="0,0,10,0" SelectedItem="{Binding Axis}" Width="60">
                                                                    <x:String>X</x:String>
                                                                    <x:String>Y</x:String>
                                                                    <x:String>Z</x:String>
                                                                </ComboBox>
                                                                <TextBox Grid.Column="1" Text="{Binding Speed}" Watermark="Speed (Â°/s)"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                        <DataTemplate DataType="models:Modifier">
                                                            <TextBlock Text="{Binding Type}" FontStyle="Italic" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                        </DataTemplate>
                                                    </ContentControl.DataTemplates>
                                                </ContentControl>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        
                        <Button Content="Replace Model" 
                                Command="{Binding ReplaceSelectedModelCommand}" 
                                IsVisible="{Binding IsModelSelected}"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"/>
                        
                        <Button Content="Remove Object" Command="{Binding RemoveObjectCommand}" Background="#C42B1C" BorderBrush="#C42B1C" Foreground="White" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <!-- World Settings (Visible when no object selected) -->
                    <StackPanel IsVisible="{Binding SelectedObject, Converter={x:Static ObjectConverters.IsNull}}" Spacing="20">
                        <TextBlock Text="World Environment" FontWeight="SemiBold"/>
                        
                        <Grid ColumnDefinitions="120, *" RowDefinitions="Auto, Auto, Auto" RowSpacing="10">
                             <TextBlock Grid.Row="0" Grid.Column="0" Text="Environment Type" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                             <ComboBox Grid.Row="0" Grid.Column="1" SelectedItem="{Binding WorldSettings.EnvironmentType}" HorizontalAlignment="Stretch">
                                <models:EnvironmentType>SolidColor</models:EnvironmentType>
                                <models:EnvironmentType>StudioPreset</models:EnvironmentType>
                                <models:EnvironmentType>CustomImage</models:EnvironmentType>
                             </ComboBox>

                             <!-- Solid Color -->
                             <TextBlock Grid.Row="1" Grid.Column="0" Text="Color" IsVisible="{Binding WorldSettings.IsSolidColor}" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                             <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding WorldSettings.BackgroundColor}" IsVisible="{Binding WorldSettings.IsSolidColor}" Watermark="#RRGGBB"/>
                             
                             <!-- Preset -->
                             <TextBlock Grid.Row="1" Grid.Column="0" Text="Preset" IsVisible="{Binding WorldSettings.IsPreset}" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                             <StackPanel Grid.Row="1" Grid.Column="1" Spacing="5" IsVisible="{Binding WorldSettings.IsPreset}">
                                 <ComboBox 
                                           ItemsSource="{Binding AvailablePresets}" 
                                           SelectedValue="{Binding WorldSettings.EnvironmentTexturePath}" 
                                           SelectedValueBinding="{Binding Path}"
                                           HorizontalAlignment="Stretch" 
                                           PlaceholderText="Select a studio light...">
                                     <ComboBox.ItemTemplate>
                                         <DataTemplate>
                                             <TextBlock Text="{Binding Name}"/>
                                         </DataTemplate>
                                     </ComboBox.ItemTemplate>
                                 </ComboBox>
                                 <CheckBox Content="Show Background Image" IsChecked="{Binding WorldSettings.ShowEnvironmentBackground}"/>
                             </StackPanel>

                             <!-- Custom -->
                             <TextBlock Grid.Row="1" Grid.Column="0" Text="Texture" IsVisible="{Binding WorldSettings.IsCustom}" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                             <StackPanel Grid.Row="1" Grid.Column="1" Spacing="5" IsVisible="{Binding WorldSettings.IsCustom}">
                                 <Grid ColumnDefinitions="*, Auto">
                                    <TextBox Text="{Binding WorldSettings.EnvironmentTexturePath}" IsReadOnly="True" Margin="0,0,5,0"/>
                                    <Button Grid.Column="1" Command="{Binding BrowseEnvironmentTextureCommand}" Content="..." Padding="8,4"/>
                                 </Grid>
                                 <CheckBox Content="Show Background Image" IsChecked="{Binding WorldSettings.ShowEnvironmentBackground}"/>
                             </StackPanel>
                             
                             <TextBlock Grid.Row="2" Grid.Column="0" Text="Ambient Strength" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                             <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding WorldSettings.Strength}"/>
                        </Grid>

                        <Separator Background="{DynamicResource BorderBrush}" Height="1"/>

                        <TextBlock Text="Camera Settings" FontWeight="SemiBold"/>
                        
                        <CheckBox Content="Auto-Center Camera" IsChecked="{Binding WorldSettings.AutoCamera}"/>
                        
                        <StackPanel IsVisible="{Binding IsManualCamera}" Spacing="10">
                            <TextBlock Text="Manual Orbit" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" FontStyle="Italic"/>
                            
                            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="80, *" RowSpacing="10">
                                <TextBlock Grid.Row="0" Text="Distance" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding WorldSettings.CameraDistance}"/>
                                
                                <TextBlock Grid.Row="1" Text="Height" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding WorldSettings.CameraHeight}"/>
                                
                                <TextBlock Grid.Row="2" Text="Angle" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding WorldSettings.CameraAngle}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>